<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Masuk - DompetKita</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center p-4">

    <div class="bg-white p-8 rounded-xl shadow-xl w-full max-w-md">
        <h2 class="text-3xl font-extrabold text-center text-blue-600 mb-2">DompetKita ðŸ’°</h2>
        <p class="text-center text-gray-500 text-sm mb-6">Aplikasi Keuangan Keluarga & UMKM</p>

        <!-- Tab Navigation -->
        <div class="flex border-b mb-6">
            <button onclick="switchTab('login')" id="tab-login" class="w-1/2 pb-2 text-blue-600 border-b-2 border-blue-600 font-bold transition">Masuk</button>
            <button onclick="switchTab('register')" id="tab-register" class="w-1/2 pb-2 text-gray-500 hover:text-blue-500 transition">Daftar Akun</button>
        </div>

        <!-- FORM LOGIN -->
        <div id="view-login">
            <form onsubmit="doLogin(event)">
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700">Email</label>
                    <input type="email" id="loginEmail" required class="w-full p-3 border rounded-lg mt-1" placeholder="nama@email.com">
                </div>
                <div class="mb-2">
                    <label class="block text-sm font-medium text-gray-700">Password</label>
                    <input type="password" id="loginPass" required class="w-full p-3 border rounded-lg mt-1" placeholder="******">
                </div>
                <div class="text-right mb-4">
                    <button type="button" onclick="switchTab('forgot')" class="text-sm text-blue-500 hover:underline">Lupa Password?</button>
                </div>
                <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg font-bold hover:bg-blue-700 transition">MASUK</button>
            </form>
        </div>

        <!-- FORM DAFTAR -->
        <div id="view-register" class="hidden">
            <form onsubmit="doRegister(event)">
                <div class="mb-3">
                    <label class="block text-sm font-medium text-gray-700">Nama Lengkap / Toko</label>
                    <input type="text" id="regName" required class="w-full p-3 border rounded-lg mt-1" placeholder="Warung Makan...">
                </div>
                <div class="mb-3">
                    <label class="block text-sm font-medium text-gray-700">Email</label>
                    <input type="email" id="regEmail" required class="w-full p-3 border rounded-lg mt-1" placeholder="nama@email.com">
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700">Password</label>
                    <input type="password" id="regPass" required class="w-full p-3 border rounded-lg mt-1" placeholder="Buat Password...">
                </div>
                <button type="submit" id="btnReg" class="w-full bg-green-600 text-white py-3 rounded-lg font-bold hover:bg-green-700">Buat Akun</button>
            </form>
        </div>

        <!-- FORM LUPA PASSWORD -->
        <div id="view-forgot" class="hidden">
            <h3 class="font-bold text-gray-700 mb-2">Reset Password</h3>
            <p class="text-xs text-gray-500 mb-4">Link reset password akan dikirim ke email Anda.</p>
            
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700">Masukkan Email</label>
                <input type="email" id="forgotEmail" class="w-full p-3 border rounded-lg">
            </div>
            <button onclick="doResetPassword()" class="w-full bg-orange-500 text-white py-3 rounded-lg font-bold hover:bg-orange-600">Kirim Link Reset</button>
            <button onclick="switchTab('login')" class="w-full mt-3 text-gray-500 text-sm">Batal</button>
        </div>

    </div>

    <!-- SCRIPT LOGIC -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
        import { getAuth, signInWithEmailAndPassword, sendPasswordResetEmail } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";

        // ==========================================
        // PASTE CONFIG FIREBASE ANDA DISINI (TIMPA INI)
        // ==========================================
        const firebaseConfig = {
            apiKey: "AIzaSyC41B208T688YdEmHSDlfwYrfcqkYLxtnk",
            authDomain: "dompet-kita-app.firebaseapp.com",
            projectId: "dompet-kita-app",
            storageBucket: "dompet-kita-app.firebasestorage.app",
            messagingSenderId: "771542294274",
            appId: "1:771542294274:web:54e35e8d4b7c8fabb3ec1b",
            measurementId: "G-MHCWZ2RHGZ"
        };
        // ==========================================

        const app = initializeApp(firebaseConfig);
        const auth = getAuth(app);
        auth.languageCode = 'id';

        // UI Tabs
        window.switchTab = (tab) => {
            ['login', 'register', 'forgot'].forEach(t => document.getElementById(`view-${t}`).classList.add('hidden'));
            document.getElementById(`view-${tab}`).classList.remove('hidden');
            
            if(tab === 'login' || tab === 'register') {
                document.getElementById('tab-login').className = tab === 'login' ? "w-1/2 pb-2 text-blue-600 border-b-2 border-blue-600 font-bold" : "w-1/2 pb-2 text-gray-500";
                document.getElementById('tab-register').className = tab === 'register' ? "w-1/2 pb-2 text-blue-600 border-b-2 border-blue-600 font-bold" : "w-1/2 pb-2 text-gray-500";
            }
        }

        // 1. REGISTER
        window.doRegister = async (e) => {
            e.preventDefault();
            const btn = document.getElementById('btnReg');
            btn.innerText = "Memproses..."; btn.disabled = true;

            const name = document.getElementById('regName').value;
            const email = document.getElementById('regEmail').value;
            const password = document.getElementById('regPass').value;

            try {
                const res = await fetch('/api/register', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email, name, password })
                });
                const data = await res.json();
                
                if(data.status === 'success') {
                    alert("âœ… Akun berhasil dibuat! Silakan Login.");
                    switchTab('login');
                } else {
                    alert("âŒ Gagal: " + data.error);
                }
            } catch (err) { alert("Error server"); }
            btn.innerText = "Buat Akun"; btn.disabled = false;
        };

        // 2. LOGIN
        window.doLogin = (e) => {
            e.preventDefault();
            const email = document.getElementById('loginEmail').value;
            const pass = document.getElementById('loginPass').value;

            signInWithEmailAndPassword(auth, email, pass)
                .then((userCredential) => userCredential.user.getIdToken())
                .then((idToken) => {
                    fetch('/api/sessionLogin', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ idToken })
                    }).then(() => window.location.assign('/dashboard'));
                })
                .catch((error) => {
                    console.error(error);
                    if(error.code === 'auth/invalid-credential') alert("âŒ Email atau Password salah!");
                    else alert("Login Gagal: " + error.message);
                });
        };

        // 3. FORGOT PASSWORD
        window.doResetPassword = () => {
            const email = document.getElementById('forgotEmail').value;
            if(!email) return alert("Masukkan email dulu!");

            sendPasswordResetEmail(auth, email)
                .then(() => {
                    alert("ðŸ“§ Link reset password telah dikirim ke Email Anda. Silakan cek Inbox/Spam.");
                    switchTab('login');
                })
                .catch((error) => {
                    alert("Gagal: " + error.message);
                });
        };
    </script>
</body>
</html>