<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - DompetKita</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .glass { background: rgba(255, 255, 255, 0.9); backdrop-filter: blur(10px); }
    </style>
</head>
<body class="bg-gray-50 text-gray-800">

    <!-- Navbar -->
        <nav class="bg-blue-700 text-white p-4 shadow-md flex justify-between items-center">
            <div>
                <h1 class="text-xl font-bold inline align-middle">DompetKita ðŸ’°</h1>
            </div>
            <div class="flex items-center gap-4">
                <!-- Menampilkan Nama User & Email -->
                <div class="text-right hidden md:block">
                    <p class="font-bold text-sm"><%= user.name || 'User' %></p>
                    <p class="text-xs text-blue-200"><%= user.email %></p>
                </div>
                <a href="/logout" class="bg-red-500 px-3 py-1 rounded text-sm hover:bg-red-600 transition">Logout</a>
            </div>
        </nav>

    <div class="container mx-auto p-4 md:p-8">
        
        <!-- Summary Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
            <div class="bg-green-100 p-6 rounded-lg shadow border-l-4 border-green-500">
                <h3 class="text-gray-500 text-sm">Total Pemasukan</h3>
                <p class="text-2xl font-bold text-green-700">Rp <%= summary.totalPemasukan.toLocaleString('id-ID') %></p>
            </div>
            <div class="bg-red-100 p-6 rounded-lg shadow border-l-4 border-red-500">
                <h3 class="text-gray-500 text-sm">Total Pengeluaran</h3>
                <p class="text-2xl font-bold text-red-700">Rp <%= summary.totalPengeluaran.toLocaleString('id-ID') %></p>
            </div>
            <div class="bg-blue-100 p-6 rounded-lg shadow border-l-4 border-blue-500">
                <h3 class="text-gray-500 text-sm">Saldo Berjalan</h3>
                <p class="text-2xl font-bold text-blue-700">Rp <%= summary.saldoAkhir.toLocaleString('id-ID') %></p>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Form Input -->
            <div class="bg-white p-6 rounded-lg shadow-lg lg:col-span-1 h-fit">
                <h2 class="text-lg font-bold mb-4 border-b pb-2">âž• Tambah Transaksi</h2>
                <form action="/dashboard/add" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="block text-xs font-bold mb-1">Tanggal</label>
                        <input type="date" name="date" required class="w-full border p-2 rounded">
                    </div>
                    <div class="mb-3">
                        <label class="block text-xs font-bold mb-1">Keterangan</label>
                        <input type="text" name="description" required placeholder="Cth: Belanja Pasar" class="w-full border p-2 rounded">
                    </div>
                    <div class="grid grid-cols-2 gap-2 mb-3">
                        <div>
                            <label class="block text-xs font-bold mb-1">Kategori</label>
                            <select name="category" class="w-full border p-2 rounded">
                                <option value="Pengeluaran">ðŸ”´ Pengeluaran</option>
                                <option value="Pemasukan">ðŸŸ¢ Pemasukan</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-xs font-bold mb-1">Nominal</label>
                            <input type="number" name="amount" required placeholder="0" class="w-full border p-2 rounded">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="block text-xs font-bold mb-1">Metode</label>
                        <select name="method" class="w-full border p-2 rounded">
                            <option value="Cash">Cash</option>
                            <option value="Transfer">Transfer</option>
                            <option value="QRIS">QRIS</option>
                        </select>
                    </div>
                    <div class="mb-4">
                        <label class="block text-xs font-bold mb-1">Bukti Foto (Opsional)</label>
                        <input type="file" name="evidence" accept="image/*" class="w-full text-sm">
                    </div>
                    <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded font-bold hover:bg-blue-700">Simpan Transaksi</button>
                </form>
            </div>

            <!-- Table Ledger -->
            <div class="bg-white p-6 rounded-lg shadow-lg lg:col-span-2">
                <div class="flex justify-between items-center mb-4 border-b pb-2">
                    <h2 class="text-lg font-bold">ðŸ“š Buku Besar</h2>
                    <a href="/dashboard/export" class="bg-green-600 text-white px-3 py-1 rounded text-sm hover:bg-green-700 flex items-center">
                        ðŸ“„ Export Excel
                    </a>
                </div>

                <div class="overflow-x-auto">
                    <table class="w-full text-sm text-left text-gray-500">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-100">
                            <tr>
                                <th class="px-3 py-3">Tgl</th>
                                <th class="px-3 py-3">Ket</th>
                                <th class="px-3 py-3">Kat</th>
                                <th class="px-3 py-3 text-right">Debit</th>
                                <th class="px-3 py-3 text-right">Kredit</th>
                                <th class="px-3 py-3 text-right">Saldo</th>
                                <th class="px-3 py-3">Bukti</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% transactions.forEach(t => { %>
                            <tr class="bg-white border-b hover:bg-gray-50">
                                <td class="px-3 py-2 whitespace-nowrap"><%= t.date %></td>
                                <td class="px-3 py-2"><%= t.description %></td>
                                <td class="px-3 py-2">
                                    <span class="<%= t.category == 'Pemasukan' ? 'text-green-600 bg-green-100' : 'text-red-600 bg-red-100' %> px-2 py-1 rounded-full text-xs">
                                        <%= t.category %>
                                    </span>
                                </td>
                                <td class="px-3 py-2 text-right text-green-600"><%= t.category == 'Pemasukan' ? t.amount.toLocaleString() : '-' %></td>
                                <td class="px-3 py-2 text-right text-red-600"><%= t.category == 'Pengeluaran' ? t.amount.toLocaleString() : '-' %></td>
                                <td class="px-3 py-2 text-right font-bold"><%= t.saldo.toLocaleString() %></td>
                                <td class="px-3 py-2 text-center">
                                    <% if(t.imageUrl) { %>
                                        <a href="<%= t.imageUrl %>" target="_blank" class="text-blue-500 underline">Lihat</a>
                                    <% } else { %> - <% } %>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>