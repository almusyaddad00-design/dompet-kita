<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - DompetKita</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap');
        body { font-family: 'Inter', sans-serif; }
        .custom-scroll::-webkit-scrollbar { height: 8px; width: 8px; }
        .custom-scroll::-webkit-scrollbar-track { background: #f1f1f1; }
        .custom-scroll::-webkit-scrollbar-thumb { background: #c1c1c1; border-radius: 4px; }
        /* Modal Background */
        .modal-bg { background-color: rgba(0, 0, 0, 0.5); }
    </style>
</head>
<body class="bg-gray-100 text-slate-800 min-h-screen flex flex-col">

    <!-- Navbar -->
    <nav class="bg-blue-800 text-white shadow-lg sticky top-0 z-50">
        <div class="container mx-auto px-4 py-3 flex justify-between items-center">
            <div class="flex items-center gap-2">
                <i class="fa-solid fa-wallet text-2xl text-yellow-400"></i>
                <h1 class="text-xl font-bold tracking-tight">DompetKita</h1>
            </div>
            <div class="flex items-center gap-4">
                <div class="text-right hidden md:block leading-tight">
                    <p class="font-semibold text-sm"><%= user.name || 'User' %></p>
                    <p class="text-xs text-blue-200"><%= user.email %></p>
                </div>
                <a href="/logout" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition shadow-md flex items-center gap-2">
                    <i class="fa-solid fa-right-from-bracket"></i> Keluar
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mx-auto p-4 md:p-6 flex-grow">
        
        <!-- Summary Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-white p-5 rounded-xl shadow-sm border border-gray-100 flex items-center justify-between relative overflow-hidden group">
                <div class="relative z-10">
                    <p class="text-gray-500 text-xs font-bold uppercase tracking-wider mb-1">Total Pemasukan</p>
                    <h3 class="text-2xl font-bold text-gray-800">Rp <%= summary.totalPemasukan.toLocaleString('id-ID') %></h3>
                </div>
                <div class="bg-green-100 p-3 rounded-full text-green-600"><i class="fa-solid fa-arrow-trend-up text-xl"></i></div>
            </div>
            <div class="bg-white p-5 rounded-xl shadow-sm border border-gray-100 flex items-center justify-between relative overflow-hidden group">
                <div class="relative z-10">
                    <p class="text-gray-500 text-xs font-bold uppercase tracking-wider mb-1">Total Pengeluaran</p>
                    <h3 class="text-2xl font-bold text-gray-800">Rp <%= summary.totalPengeluaran.toLocaleString('id-ID') %></h3>
                </div>
                <div class="bg-red-100 p-3 rounded-full text-red-600"><i class="fa-solid fa-arrow-trend-down text-xl"></i></div>
            </div>
            <div class="bg-white p-5 rounded-xl shadow-sm border border-gray-100 flex items-center justify-between relative overflow-hidden group">
                <div class="relative z-10">
                    <p class="text-gray-500 text-xs font-bold uppercase tracking-wider mb-1">Saldo Berjalan</p>
                    <h3 class="text-2xl font-bold text-blue-700">Rp <%= summary.saldoAkhir.toLocaleString('id-ID') %></h3>
                </div>
                <div class="bg-blue-100 p-3 rounded-full text-blue-600"><i class="fa-solid fa-sack-dollar text-xl"></i></div>
            </div>
        </div>

        <!-- Layout Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            
            <!-- LEFT: Form Input -->
            <div class="lg:col-span-1">
                <div class="bg-white p-6 rounded-xl shadow-md border border-gray-100 sticky top-24">
                    <h2 class="text-lg font-bold mb-5 flex items-center gap-2 text-gray-700 border-b pb-3">
                        <i class="fa-solid fa-circle-plus text-blue-600"></i> Transaksi Baru
                    </h2>
                    
                    <form action="/dashboard/add" method="POST" enctype="multipart/form-data" onsubmit="prepareSubmit('add')">
                        <div class="space-y-4">
                            <div>
                                <label class="block text-xs font-bold text-gray-500 mb-1 uppercase">Tanggal</label>
                                <input type="date" name="date" required class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 text-sm">
                            </div>
                            <div>
                                <label class="block text-xs font-bold text-gray-500 mb-1 uppercase">Keterangan</label>
                                <input type="text" name="description" required placeholder="Cth: Belanja Sayur" class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 text-sm">
                            </div>
                            <div class="grid grid-cols-2 gap-3">
                                <div>
                                    <label class="block text-xs font-bold text-gray-500 mb-1 uppercase">Jenis</label>
                                    <select name="category" class="w-full px-3 py-2 border rounded-lg text-sm bg-white">
                                        <option value="Pengeluaran">üî¥ Keluar</option>
                                        <option value="Pemasukan">üü¢ Masuk</option>
                                    </select>
                                </div>
                                <div>
                                    <label class="block text-xs font-bold text-gray-500 mb-1 uppercase">Metode</label>
                                    <select name="method" class="w-full px-3 py-2 border rounded-lg text-sm bg-white">
                                        <option value="Cash">üíµ Tunai</option>
                                        <option value="Transfer">üè¶ Transfer</option>
                                    </select>
                                </div>
                            </div>
                            <div>
                                <label class="block text-xs font-bold text-gray-500 mb-1 uppercase">Nominal (Rp)</label>
                                <input type="text" id="rupiahInput_add" class="w-full px-3 py-2 border rounded-lg text-lg font-bold text-right" placeholder="0" onkeyup="formatRupiah(this, 'realAmount_add')">
                                <input type="hidden" name="amount" id="realAmount_add">
                            </div>
                            <div>
                                <label class="block text-xs font-bold text-gray-500 mb-1 uppercase">Bukti Foto</label>
                                <input type="file" name="evidence" accept="image/*" class="block w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-xs file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 cursor-pointer">
                            </div>
                            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 rounded-lg shadow-md transition">Simpan Transaksi</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- RIGHT: Table Ledger -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-xl shadow-md border border-gray-100 flex flex-col h-full">
                    
                    <!-- Toolbar -->
                    <div class="p-4 border-b border-gray-100 bg-gray-50 rounded-t-xl flex flex-col md:flex-row justify-between items-center gap-4">
                        <h2 class="text-lg font-bold text-gray-700 flex items-center gap-2">
                            <i class="fa-solid fa-book-open text-blue-600"></i> Buku Besar
                        </h2>

                        <div class="flex flex-wrap items-center justify-end gap-2 w-full md:w-auto">
                            <!-- Filter Form -->
                            <form action="/dashboard" method="GET" class="flex items-center gap-2 bg-white px-2 py-1 rounded-lg border shadow-sm">
                                <select id="filterType" name="type" class="text-sm border-none focus:ring-0 bg-transparent text-gray-600 font-medium cursor-pointer" onchange="handleFilterChange()">
                                    <option value="all" <%= filter.type === 'all' ? 'selected' : '' %>>Semua</option>
                                    <option value="daily" <%= filter.type === 'daily' ? 'selected' : '' %>>Harian</option>
                                    <option value="monthly" <%= filter.type === 'monthly' ? 'selected' : '' %>>Bulanan</option>
                                    <option value="yearly" <%= filter.type === 'yearly' ? 'selected' : '' %>>Tahunan</option>
                                </select>
                                <input type="date" name="date" id="filterDate" value="<%= filter.date || '' %>" class="text-sm border-l pl-2 py-1 focus:outline-none <%= filter.type === 'daily' ? '' : 'hidden' %>">
                                <input type="month" name="month" id="filterMonth" value="<%= filter.month || '' %>" class="text-sm border-l pl-2 py-1 focus:outline-none <%= filter.type === 'monthly' ? '' : 'hidden' %>">
                                <input type="number" name="year" id="filterYear" placeholder="Thn" min="2020" max="2030" value="<%= filter.year || '' %>" class="text-sm border-l pl-2 py-1 w-16 focus:outline-none <%= filter.type === 'yearly' ? '' : 'hidden' %>">
                                <button type="submit" class="bg-gray-100 hover:bg-gray-200 text-gray-600 p-1 rounded transition"><i class="fa-solid fa-magnifying-glass"></i></button>
                            </form>
                            <% if(filter.type && filter.type !== 'all') { %>
                                <a href="/dashboard" class="text-red-500 text-xs hover:underline"><i class="fa-solid fa-times"></i></a>
                            <% } %>
                            <button onclick="exportCurrentData()" class="bg-green-600 hover:bg-green-700 text-white px-3 py-1.5 rounded-lg text-sm font-medium shadow-sm flex items-center gap-2 transition"><i class="fa-solid fa-file-excel"></i> <span class="hidden sm:inline">Excel</span></button>
                        </div>
                    </div>

                    <!-- Table -->
                    <div class="overflow-x-auto custom-scroll p-0 flex-grow">
                        <table class="w-full text-sm text-left">
                            <thead class="text-xs text-gray-500 uppercase bg-gray-50 border-b">
                                <tr>
                                    <th class="px-4 py-3 font-semibold">Tgl</th>
                                    <th class="px-4 py-3 font-semibold">Keterangan</th>
                                    <th class="px-4 py-3 font-semibold text-center">Kat</th>
                                    <th class="px-4 py-3 font-semibold text-right">Debit</th>
                                    <th class="px-4 py-3 font-semibold text-right">Kredit</th>
                                    <th class="px-4 py-3 font-semibold text-right">Saldo</th>
                                    <th class="px-4 py-3 font-semibold text-center">Aksi</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-100">
                                <% if(transactions.length === 0) { %>
                                    <tr><td colspan="7" class="text-center py-8 text-gray-400 italic">Belum ada data</td></tr>
                                <% } %>
                                <% transactions.forEach(t => { %>
                                <tr class="bg-white hover:bg-blue-50 transition group">
                                    <td class="px-4 py-3 whitespace-nowrap text-gray-500"><%= t.date %></td>
                                    <td class="px-4 py-3 font-medium text-gray-800"><%= t.description %></td>
                                    <td class="px-4 py-3 text-center">
                                        <span class="<%= t.category == 'Pemasukan' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %> text-[10px] font-bold px-2 py-0.5 rounded-full border">
                                            <%= t.category == 'Pemasukan' ? 'MASUK' : 'KELUAR' %>
                                        </span>
                                    </td>
                                    <td class="px-4 py-3 text-right font-medium text-green-600"><%= t.category == 'Pemasukan' ? t.amount.toLocaleString('id-ID') : '-' %></td>
                                    <td class="px-4 py-3 text-right font-medium text-red-600"><%= t.category == 'Pengeluaran' ? t.amount.toLocaleString('id-ID') : '-' %></td>
                                    <td class="px-4 py-3 text-right font-bold text-slate-700"><%= t.saldo.toLocaleString('id-ID') %></td>
                                    
                                    <!-- KOLOM AKSI (EDIT & DELETE) -->
                                    <td class="px-4 py-3 text-center flex justify-center gap-2">
                                        <!-- Tombol Edit -->
                                        <button onclick="openEditModal('<%= t.id %>', '<%= t.date %>', '<%= t.description %>', '<%= t.category %>', '<%= t.amount %>', '<%= t.method %>')" 
                                            class="bg-yellow-100 text-yellow-600 hover:bg-yellow-200 p-1.5 rounded-md transition" title="Edit">
                                            <i class="fa-solid fa-pencil"></i>
                                        </button>
                                        
                                        <!-- Tombol Hapus -->
                                        <button onclick="confirmDelete('<%= t.id %>')" class="bg-red-100 text-red-600 hover:bg-red-200 p-1.5 rounded-md transition" title="Hapus">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>

                                        <!-- Tombol Bukti -->
                                        <% if(t.imageUrl) { %>
                                            <a href="<%= t.imageUrl %>" target="_blank" class="bg-blue-100 text-blue-600 hover:bg-blue-200 p-1.5 rounded-md transition" title="Lihat Foto">
                                                <i class="fa-solid fa-image"></i>
                                            </a>
                                        <% } %>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- MODAL EDIT DATA -->
    <div id="editModal" class="fixed inset-0 hidden items-center justify-center z-[100] modal-bg opacity-0 transition-opacity duration-300">
        <div class="bg-white p-6 rounded-xl shadow-2xl w-full max-w-md transform scale-95 transition-transform duration-300">
            <div class="flex justify-between items-center mb-4 border-b pb-2">
                <h3 class="text-lg font-bold text-gray-800">‚úèÔ∏è Edit Transaksi</h3>
                <button onclick="closeEditModal()" class="text-gray-400 hover:text-red-500"><i class="fa-solid fa-times text-xl"></i></button>
            </div>
            
            <form id="editForm" method="POST" enctype="multipart/form-data" onsubmit="prepareSubmit('edit')">
                <div class="space-y-3">
                    <div>
                        <label class="block text-xs font-bold text-gray-500 mb-1">Tanggal</label>
                        <input type="date" name="date" id="editDate" required class="w-full px-3 py-2 border rounded-lg text-sm">
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-gray-500 mb-1">Keterangan</label>
                        <input type="text" name="description" id="editDesc" required class="w-full px-3 py-2 border rounded-lg text-sm">
                    </div>
                    <div class="grid grid-cols-2 gap-3">
                        <div>
                            <label class="block text-xs font-bold text-gray-500 mb-1">Jenis</label>
                            <select name="category" id="editCat" class="w-full px-3 py-2 border rounded-lg text-sm bg-white">
                                <option value="Pengeluaran">üî¥ Keluar</option>
                                <option value="Pemasukan">üü¢ Masuk</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-xs font-bold text-gray-500 mb-1">Metode</label>
                            <select name="method" id="editMethod" class="w-full px-3 py-2 border rounded-lg text-sm bg-white">
                                <option value="Cash">üíµ Tunai</option>
                                <option value="Transfer">üè¶ Transfer</option>
                            </select>
                        </div>
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-gray-500 mb-1">Nominal (Rp)</label>
                        <input type="text" id="rupiahInput_edit" class="w-full px-3 py-2 border rounded-lg text-lg font-bold text-right" onkeyup="formatRupiah(this, 'realAmount_edit')">
                        <input type="hidden" name="amount" id="realAmount_edit">
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-gray-500 mb-1">Ganti Bukti (Opsional)</label>
                        <input type="file" name="evidence" accept="image/*" class="block w-full text-xs text-slate-500">
                    </div>
                    
                    <button type="submit" class="w-full bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 rounded-lg mt-2 transition">Simpan Perubahan</button>
                </div>
            </form>
        </div>
    </div>

    <!-- JAVASCRIPT -->
    <script>
        // --- 1. FORMAT RUPIAH ---
        function formatRupiah(input, targetId) {
            let value = input.value.replace(/\D/g, "");
            input.value = new Intl.NumberFormat('id-ID').format(value);
            document.getElementById(targetId).value = value;
        }

        function prepareSubmit(type) {
            const inputId = type === 'add' ? 'rupiahInput_add' : 'rupiahInput_edit';
            const targetId = type === 'add' ? 'realAmount_add' : 'realAmount_edit';
            
            let val = document.getElementById(inputId).value.replace(/\D/g, "");
            document.getElementById(targetId).value = val;
            if(!val) { alert("Nominal tidak boleh kosong!"); return false; }
        }

        // --- 2. LOGIKA EDIT & DELETE ---
        
        function openEditModal(id, date, desc, cat, amount, method) {
            // Isi form dengan data yang ada
            document.getElementById('editDate').value = date;
            document.getElementById('editDesc').value = desc;
            document.getElementById('editCat').value = cat;
            document.getElementById('editMethod').value = method;
            
            // Format Rupiah di Input Edit
            const rupiah = new Intl.NumberFormat('id-ID').format(amount);
            document.getElementById('rupiahInput_edit').value = rupiah;
            document.getElementById('realAmount_edit').value = amount;

            // Set Action URL Form
            document.getElementById('editForm').action = `/dashboard/update/${id}`;

            // Tampilkan Modal dengan Animasi
            const modal = document.getElementById('editModal');
            modal.classList.remove('hidden');
            modal.classList.add('flex');
            // Sedikit delay biar transisi opacity jalan
            setTimeout(() => {
                modal.classList.remove('opacity-0');
                modal.firstElementChild.classList.remove('scale-95');
                modal.firstElementChild.classList.add('scale-100');
            }, 10);
        }

        function closeEditModal() {
            const modal = document.getElementById('editModal');
            modal.classList.add('opacity-0');
            modal.firstElementChild.classList.add('scale-95');
            modal.firstElementChild.classList.remove('scale-100');
            setTimeout(() => {
                modal.classList.add('hidden');
                modal.classList.remove('flex');
            }, 300);
        }

        function confirmDelete(id) {
            if(confirm("Apakah Anda yakin ingin menghapus data ini? Data tidak bisa dikembalikan.")) {
                window.location.href = `/dashboard/delete/${id}`;
            }
        }

        // --- 3. FILTER & EXPORT (Sama seperti sebelumnya) ---
        function handleFilterChange() {
            const type = document.getElementById('filterType').value;
            document.getElementById('filterDate').classList.add('hidden');
            document.getElementById('filterMonth').classList.add('hidden');
            document.getElementById('filterYear').classList.add('hidden');

            if (type === 'daily') {
                const d = document.getElementById('filterDate');
                d.classList.remove('hidden');
                if(!d.value) d.valueAsDate = new Date();
            }
            if (type === 'monthly') document.getElementById('filterMonth').classList.remove('hidden');
            if (type === 'yearly') document.getElementById('filterYear').classList.remove('hidden');
        }

        function exportCurrentData() {
            const params = new URLSearchParams(window.location.search);
            window.location.href = `/dashboard/export?${params.toString()}`;
        }
    </script>

